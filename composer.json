{
    "name": "erp/saas-business-suite",
    "description": "Production-grade SaaS Business Suite (CRM + ERP + Project Management)",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "api-platform/core": "^3.3",
        "doctrine/doctrine-bundle": "^2.13",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^3.0",
        "lexik/jwt-authentication-bundle": "^3.1",
        "ramsey/uuid": "^4.7",
        "symfony/console": "^7.1",
        "symfony/dotenv": "^7.1",
        "symfony/flex": "^2.4",
        "symfony/framework-bundle": "^7.1",
        "symfony/messenger": "^7.1",
        "symfony/runtime": "^7.1",
        "symfony/scheduler": "^7.1",
        "symfony/security-bundle": "^7.1",
        "symfony/serializer": "^7.1",
        "symfony/validator": "^7.1",
        "symfony/var-exporter": "^7.1",
        "symfony/workflow": "^7.1",
        "symfony/yaml": "^7.1",
        "stripe/stripe-php": "^13.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.11",
        "phpstan/phpstan-doctrine": "^1.4",
        "phpstan/phpstan-symfony": "^1.3",
        "phpunit/phpunit": "^11.0",
        "symfony/maker-bundle": "^1.65",
        "symfony/phpunit-bridge": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse --level=8",
        "cs-fix": "php-cs-fixer fix",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    }
}
